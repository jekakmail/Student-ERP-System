<Window x:Class="Student_ERP.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Student_ERP"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="AboutWindow"
        Width="428.789"
        Height="233.15"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <TextBlock x:Name="TblInfo" Margin="10" />
            <TextBlock HorizontalAlignment="Center">
                <Hyperlink NavigateUri="http://github.com/jekakmail" RequestNavigate="Hyperlink_OnRequestNavigate">GitHub</Hyperlink>
            </TextBlock>
        </StackPanel>
        <Button Grid.Row="1"
                MaxWidth="50"
                Margin="0 0 0 10"
                Click="OK_Click"
                Content="OK"
                IsDefault="True" />
    </Grid>
</Window>
